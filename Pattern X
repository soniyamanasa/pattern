n=int(input())
n1=n
t=(2*n+1)-4
for i in range(n):
    for k in range(n-1):
        print(" ",end="")
    for j in range(0,(2*i+1)):
        print("*",end="")
    print()
    n=n-1
for i in range(1,n1):
    for k in range(i):
        print(" ",end="")
    for j in range(t):
        print("*",end="")
    t=t-2
    print()
